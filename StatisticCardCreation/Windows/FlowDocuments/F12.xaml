                                                        <StackPanel Width="549">
                                                            <Border>
                                                                <localControl:AutoSizeTextBox Text="{Binding F12.BirthPlace.Locality}"   HorizontalAlignment="Left" Padding="4,0,0,0" Height="19"/>
