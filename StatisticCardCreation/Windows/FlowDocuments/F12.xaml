                                        <TextBlock Height="36">2.1</TextBlock>
                                        <TextBlock Height="56">2.2</TextBlock>
                                        <TextBlock Height="28">2.3</TextBlock>
                                        <TextBlock Height="56">2.4</TextBlock>
                                        <TextBlock Height="145">2.5</TextBlock>
